<?xml version="1.0" encoding="utf-8" ?>
<configuration xmlns="http://logging.apache.org/log4php/">
   <appender name="default" class="LoggerAppenderDailyFile">
      <layout class="LoggerLayoutPattern">
         <param name="conversionPattern" value="%d{H:i:s} %p [%c]: %m (at %F:%L) %x%n" />
      </layout>
      <param name="file" value="debmes/%s.log" />
      <param name="datePattern" value="Y-m-d" />
   </appender>
   <appender name="errorLog" class="LoggerAppenderDailyFile">
      <layout class="LoggerLayoutPattern">
         <param name="conversionPattern" value="%d{H:i:s} %p [%c]: %m (at %F:%L) %x%n" />
      </layout>
      <param name="file" value="debmes/error_%s.log" />
      <param name="datePattern" value="Y-m-d" />
      <filter class="LoggerFilterLevelRange">
          <param name="LevelMin" value="error" />
          <param name="LevelMax" value="fatal" />
      </filter>
      <filter class="LoggerFilterDenyAll" />
   </appender>
    <appender name="objectsFileLog" class="LoggerAppenderDailyFile">
        <layout class="LoggerLayoutPattern">
            <param name="conversionPattern" value="%d{H:i:s} %p [%c]: %m %x%n" />
        </layout>
        <param name="file" value="debmes/%s.log" />
        <param name="datePattern" value="Y-m-d" />
    </appender>
    <logger name="page.megad" additivity="false">
        <level value="TRACE" />
        <appender_ref ref="objectsFileLog" />
    </logger>
    <logger name="class.object.MegaD4" additivity="false">
        <level value="TRACE" />
        <appender_ref ref="objectsFileLog" />
    </logger>
    <logger name="class.object.MegaD5" additivity="false">
        <level value="TRACE" />
        <appender_ref ref="objectsFileLog" />
    </logger>
   <root>
      <level value="DEBUG" />
      <appender_ref ref="default" />
      <appender_ref ref="errorLog" />
   </root>
</configuration>
